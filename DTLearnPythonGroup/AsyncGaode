loop = asyncio.get_event_loop()
tasks = [get_formattedAdd(line123) for line123 in AddressTargetlist]  # 把所有任务放到一个列表中
loop.run_until_complete(asyncio.wait(tasks)) # 激活协程
loop.close()  # 关闭事件循环

